# CodeGuardian AI Environment Configuration

# App Configuration
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///./codeguardian.db

# GitHub Integration (Required for GitHub support)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
# Optional: For GitHub Apps
# GITHUB_APP_ID=your_github_app_id
# GITHUB_PRIVATE_KEY=your_github_private_key

# GitLab Integration (Required for GitLab support)
GITLAB_TOKEN=glpat-your_gitlab_personal_access_token_here
GITLAB_URL=https://gitlab.com

# Bitbucket Integration (Optional)
# BITBUCKET_USERNAME=your_bitbucket_username
# BITBUCKET_APP_PASSWORD=your_bitbucket_app_password

# AI Configuration (Optional)
# OPENAI_API_KEY=sk-your_openai_api_key_here
# HUGGINGFACE_TOKEN=hf_your_huggingface_token_here
USE_LOCAL_AI=true

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Analysis Configuration
MAX_FILE_SIZE=1048576  # 1MB in bytes
SUPPORTED_LANGUAGES=python,javascript,typescript,java,go

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Webhook Configuration (Optional)
# WEBHOOK_SECRET=your_webhook_secret_here

# Logging
LOG_LEVEL=INFO